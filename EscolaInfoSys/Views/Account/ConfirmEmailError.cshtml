@{
    ViewData["Title"] = "Email Confirmation Failed";
}

<div class="page-body">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <div class="card card-md text-center">
                    <div class="card-body">
                        <h2 class="card-title text-danger mb-3">Email Confirmation Failed</h2>
                        <p class="text-muted">
                            Unfortunately, we were unable to confirm your email address. The confirmation link may have expired or already been used.
                        </p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
