@model EscolaInfoSys.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="page-body">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card card-md">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4"><i class="fa fa-lock me-2"></i> Change Password</h3>
                        <form asp-action="ChangePassword" method="post">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="CurrentPassword" class="form-label"><i class="fa fa-key me-2"></i>Current Password</label>
                                <div class="input-group">
                                    <input asp-for="CurrentPassword" class="form-control" type="password" id="CurrentPassword" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('CurrentPassword')">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label"><i class="fa fa-key me-2"></i>New Password</label>
                                <div class="input-group">
                                    <input asp-for="NewPassword" class="form-control" type="password" id="NewPassword" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('NewPassword')">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label"><i class="fa fa-key me-2"></i>Confirm Password</label>
                                <div class="input-group">
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" id="ConfirmPassword" />
                                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('ConfirmPassword')">
                                        <i class="fa fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary w-100"><i class="fa fa-save me-2"></i> Save</button>
                                <a asp-action="Profile" class="btn btn-link w-100 mt-2"><i class="fa fa-times me-2"></i> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
