@model EscolaInfoSys.Models.ViewModels.EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="card p-4">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"><i class="fa fa-user me-2"></i> Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.CurrentPhoto))
        {
            <img src="~/uploads/@Model.CurrentPhoto" alt="Current photo" style="width: 80px;" class="mb-2 rounded" />
        }
        <label asp-for="NewPhoto" class="form-label"><i class="fa fa-image me-2"></i> New Photo</label>
        <input asp-for="NewPhoto" type="file" class="form-control" />
        <span asp-validation-for="NewPhoto" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save me-2"></i> Save</button>
        <a asp-action="Profile" class="btn btn-secondary"><i class="fa fa-arrow-left me-2"></i> Cancel</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




