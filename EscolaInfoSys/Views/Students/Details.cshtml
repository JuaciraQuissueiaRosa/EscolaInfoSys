@model EscolaInfoSys.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2 class="page-title"><i class="fa fa-eye"></i> Student Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Pupil Number</dt>
        <dd class="col-sm-9">@Model.PupilNumber</dd>

        <dt class="col-sm-3">Form Group</dt>
        <dd class="col-sm-9">@Model.FormGroup?.Name</dd>

        <dt class="col-sm-3">Profile Photo</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
            {
                <img src="~/uploads/@Model.ProfilePhoto" width="100" height="100" class="rounded-circle border" />
            }
            else
            {
                <span class="text-muted">No profile photo</span>
            }
        </dd>

        <dt class="col-sm-3">Document Photo</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.DocumentPhoto))
            {
                <img src="~/uploads/@Model.DocumentPhoto" width="100" height="100" class="border" />
            }
            else
            {
                <span class="text-muted">No document photo</span>
            }
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-edit"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to List</a>
    </div>
</div>
