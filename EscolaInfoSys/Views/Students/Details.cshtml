@model EscolaInfoSys.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2 class="page-title"><i class="fa fa-eye"></i> Student Details</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Student Number</dt>
        <dd class="col-sm-9">@Model.PupilNumber</dd>

        <dt class="col-sm-3">Form Group</dt>
        <dd class="col-sm-9">@Model.FormGroup?.Name</dd>

        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@Model.Course?.Name</dd>

        <dt class="col-sm-3">Profile Photo</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
            {
                <img src="/uploads/@Model.ProfilePhoto"
                     alt="Profile Photo"
                     class="rounded-circle"
                     style="width:80px; height:80px; object-fit:cover;" />
            }
            else
            {
                <i class="fa fa-user-circle fa-4x text-secondary"></i>
            }
        </dd>

        <dt class="col-sm-3">Document Photo</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.DocumentPhoto))
            {
                <img src="/uploads/@Model.DocumentPhoto"
                     alt="Document Photo"
                     class="border rounded"
                     style="width:100px; height:100px; object-fit:cover;" />
            }
            else
            {
                <i class="fa fa-id-card fa-3x text-muted"></i>
            }
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fa fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
