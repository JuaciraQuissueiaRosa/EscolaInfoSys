@model Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<dl class="row">
    <dt class="col-sm-3">Full Name</dt>
    <dd class="col-sm-9">@Model.FullName</dd>

    <dt class="col-sm-3">Pupil Number</dt>
    <dd class="col-sm-9">@Model.PupilNumber</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Form Group</dt>
    <dd class="col-sm-9">@Model.FormGroup?.Name</dd>

    <dt class="col-sm-3">Document</dt>
    <dd class="col-sm-9">@Model.DocumentPhoto</dd>

    @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
    {
        <dt class="col-sm-3">Profile Photo</dt>
        <dd class="col-sm-9">
            <img src="@Model.ProfilePhoto" alt="Profile Photo" style="max-height: 150px;" />
        </dd>
    }
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

