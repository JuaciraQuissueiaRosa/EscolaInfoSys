@model Student

@{
    ViewData["Title"] = "Add Student";
}

<h2>Add Student</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PupilNumber"></label>
        <input asp-for="PupilNumber" class="form-control" />
        <span asp-validation-for="PupilNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FormGroupId"></label>
        <select asp-for="FormGroupId" class="form-control" asp-items="ViewBag.FormGroupId"></select>
        <span asp-validation-for="FormGroupId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProfilePhoto"></label>
        <input asp-for="ProfilePhoto" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DocumentPhoto"></label>
        <input asp-for="DocumentPhoto" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

