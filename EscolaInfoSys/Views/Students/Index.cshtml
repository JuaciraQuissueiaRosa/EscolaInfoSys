@model IEnumerable<EscolaInfoSys.Models.Student>

<h2><i class="fa fa-user-graduate"></i> Students</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fa fa-plus-circle"></i> Create New
</a>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Student Number</th>
            <th>Form Group</th>
            <th>Course</th>
            <th>Profile Photo</th>
            <th>Document Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Email</td>
                <td>@student.PupilNumber</td>
                <td>@student.FormGroup?.Name</td>
                <td>@student.Course?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(student.ProfilePhoto))
                    {
                        <img src="@(string.IsNullOrEmpty(student.ProfilePhoto) ? "~/images/default.png" : student.ProfilePhoto)"
                             alt="Profile Photo"
                             class="rounded-circle"
                             style="width:40px; height:40px; object-fit:cover;" />

                    }
                    else
                    {
                        <i class="fa fa-user-circle fa-2x text-secondary"></i>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(student.DocumentPhoto))
                    {
                        <img src="@student.DocumentPhoto" alt="Document Photo" style="width:40px; height:40px; object-fit:cover;" />
                    }
                    else
                    {
                        <i class="fa fa-id-card fa-2x text-secondary"></i>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm me-1" title="Edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm me-1" title="Details">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm" title="Delete"
                       onclick="return confirm('Are you sure you want to delete this student?');">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
