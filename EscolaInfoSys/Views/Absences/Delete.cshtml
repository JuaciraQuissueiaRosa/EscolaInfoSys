@model EscolaInfoSys.Models.Absence
@{
    ViewData["Title"] = "Delete Absence";
}
<h2><i class="fa fa-trash"></i> Delete Absence</h2>

<div class="card">
    <div class="card-body">
        <h5>Are you sure you want to delete this record?</h5>

        <dl class="row mt-3">
            <dt class="col-sm-3">Student</dt>
            <dd class="col-sm-9">@Model.Student.FullName</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject.Name</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
        </dl>

        <dt class="col-sm-2">
            Justification
        </dt>
        <dd class="col-sm-10">
            @if (Model.Justified)
            {
                <span class="text-success">Justified</span>
            }
            else
            {
                <span class="text-danger">Unjustified</span>
            }
        </dd>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
