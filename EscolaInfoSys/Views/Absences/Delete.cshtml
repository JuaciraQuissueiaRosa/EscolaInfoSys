@model Absence

@{
    ViewData["Title"] = "Delete Absence";
}

<h2>Delete Absence</h2>

<h4>Are you sure you want to delete this absence record?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">Justified</dt>
    <dd class="col-sm-10">@((Model.Justified) ? "Yes" : "No")</dd>

    <dt class="col-sm-2">Student</dt>
    <dd class="col-sm-10">@Model.Student?.FullName</dd>

    <dt class="col-sm-2">Subject</dt>
    <dd class="col-sm-10">@Model.Subject?.Name</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

