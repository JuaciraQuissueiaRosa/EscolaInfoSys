@model EscolaInfoSys.Models.ViewModels.AbsenceEditViewModel

@{
    ViewData["Title"] = "Edit Absence";
}
<h2><i class="fa fa-edit"></i> Edit Absence</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="SubjectId" class="form-label"></label>
                <select asp-for="SubjectId" class="form-select" asp-items="ViewBag.SubjectId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Justified" class="form-check-input" type="checkbox" />
                <label asp-for="Justified" class="form-check-label">Is Justified?</label>
                <span asp-validation-for="Justified" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
