@model EscolaInfoSys.Models.ErrorViewModel
@{
    ViewData["Title"] = "Application Error";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Something went wrong</h1>
    <p class="lead">We're sorry, but an unexpected error occurred.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">Request ID: <code>@Model.RequestId</code></p>
    }

    <a href="/" class="btn btn-primary mt-3">Go back to home</a>
</div>
