@model Student

@{
    ViewData["Title"] = "My Dashboard";
}

<h2 class="mb-4"><i class="fa fa-user-graduate me-2"></i> Welcome, @Model.FullName!</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4><i class="fa fa-id-badge me-2 text-primary"></i> Profile Info</h4>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Pupil Number:</strong> @Model.PupilNumber</p>
                <p><strong>Form Group:</strong> @Model.FormGroup?.Name</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4><i class="fa fa-link me-2 text-info"></i> Quick Links</h4>
                <ul class="list-unstyled">
                    <li><a asp-action="MyMarks" class="btn btn-outline-primary w-100 my-2"><i class="fa fa-file-alt me-2"></i> View My Marks</a></li>
                    <li><a asp-action="MyAbsences" class="btn btn-outline-danger w-100 my-2"><i class="fa fa-calendar-times me-2"></i> View My Absences</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
