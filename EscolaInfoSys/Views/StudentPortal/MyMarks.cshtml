@model IEnumerable<EscolaInfoSys.Models.Dtos.StudentSubjectAverageDto>

@{
    ViewData["Title"] = "My Marks";
}

<h2 class="mb-4"><i class="fa fa-file-alt me-2 text-primary"></i> My Marks</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No marks available yet.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Subject</th>
                <th>Average Mark</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var avg in Model)
            {
                <tr>
                    <td>@avg.SubjectName</td>
                    <td>@avg.Average.ToString("F2")</td>
                    <td>
                        @if (avg.IsPassed)
                        {
                            <span class="badge bg-success">Passed</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Failed</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


