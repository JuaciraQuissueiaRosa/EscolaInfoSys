@model EscolaInfoSys.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<h2 class="page-title">Edit Mark</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Value" class="form-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StudentId" class="form-label"></label>
                <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubjectId" class="form-label"></label>
                <select asp-for="SubjectId" class="form-select" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EvaluationType" class="form-label"></label>
                <input asp-for="EvaluationType" class="form-control" />
                <span asp-validation-for="EvaluationType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StaffMemberId" class="form-label"></label>
                <select asp-for="StaffMemberId" class="form-select" asp-items="ViewBag.StaffMemberId"></select>
                <span asp-validation-for="StaffMemberId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
