@model Mark

@{
    ViewData["Title"] = "Add Mark";
}

<h2>Add Mark</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Value"></label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EvaluationType"></label>
        <input asp-for="EvaluationType" class="form-control" />
        <span asp-validation-for="EvaluationType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StaffMemberId"></label>
        <select asp-for="StaffMemberId" class="form-control" asp-items="ViewBag.StaffMemberId"></select>
        <span asp-validation-for="StaffMemberId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
