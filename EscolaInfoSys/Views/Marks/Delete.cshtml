@model Mark

@{
    ViewData["Title"] = "Delete Mark";
}

<h2>Delete Mark</h2>

<h4>Are you sure you want to delete this mark?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Student</dt>
    <dd class="col-sm-9">@Model.Student?.FullName</dd>

    <dt class="col-sm-3">Subject</dt>
    <dd class="col-sm-9">@Model.Subject?.Name</dd>

    <dt class="col-sm-3">Value</dt>
    <dd class="col-sm-9">@Model.Value</dd>

    <dt class="col-sm-3">Evaluation Type</dt>
    <dd class="col-sm-9">@Model.EvaluationType</dd>

    <dt class="col-sm-3">Staff Member</dt>
    <dd class="col-sm-9">@Model.StaffMember?.FullName</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
