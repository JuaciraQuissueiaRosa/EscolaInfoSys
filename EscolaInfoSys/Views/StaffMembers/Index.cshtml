@model IEnumerable<EscolaInfoSys.Models.StaffMember>

@{
    ViewData["Title"] = "Staff Members";
}


<h2 class="page-title"><i class="fa fa-users"></i> Staff Members</h2>
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table table-hover card">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().FullName)</th>
            <th>@Html.DisplayNameFor(m => m.First().Email)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.FullName)</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

