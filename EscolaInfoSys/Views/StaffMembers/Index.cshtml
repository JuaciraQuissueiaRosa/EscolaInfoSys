@model IEnumerable<EscolaInfoSys.Models.StaffMember>

@{
    ViewData["Title"] = "Staff Members";
}

<h2 class="page-title"><i class="fa fa-users text-primary me-2"></i> Staff Members</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i> Create New
    </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        var user = item.ApplicationUser;
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(user?.ProfilePhoto) ? "/img/avatar-placeholder.png" : "/uploads/" + user.ProfilePhoto)"
                         class="rounded-circle mb-3 shadow" width="100" height="100" style="object-fit: cover;" alt="Profile Picture" />

                    <h5 class="card-title">@user?.Name  </h5>
                    <p class="text-muted">@user?.Email</p>

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fa fa-eye me-1"></i> View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

