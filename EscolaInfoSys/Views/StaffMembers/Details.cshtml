@model EscolaInfoSys.Models.StaffMember

@{
    ViewData["Title"] = "Staff Member Details";
}

<h2 class="page-title"><i class="fa fa-id-card text-primary me-2"></i> Staff Details</h2>

<div class="card p-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ApplicationUser?.ProfilePhoto) ? "/img/avatar-placeholder.png" : "/uploads/" + Model.ApplicationUser.ProfilePhoto)"
                 class="rounded-circle mb-3 shadow" width="150" height="150" style="object-fit: cover;" alt="Profile Picture" />
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.ApplicationUser?.Name</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.ApplicationUser?.Email</dd>

                <dt class="col-sm-4">Username</dt>
                <dd class="col-sm-8">@Model.ApplicationUser?.UserName</dd>
            </dl>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fa fa-edit me-1"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                <i class="fa fa-trash me-1"></i> Delete
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fa fa-arrow-left me-1"></i> Back to List
            </a>

        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
