@model IEnumerable<Alert>

<h2 class="page-title">
    <i class="fa fa-bullhorn text-primary me-2"></i> My Alerts
</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fa fa-info-circle me-2"></i> You have not sent any alerts yet.
    </div>
}
else
{
    foreach (var alert in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header d-flex justify-content-between">
                <span><strong>@alert.Title</strong></span>
                <span class="text-muted">@alert.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
            <div class="card-body">
                <p>@alert.Message</p>

                <p>
                    <strong>Status:</strong>
                    @if (alert.IsResolved)
                    {
                        <span class="badge bg-success"><i class="fa fa-check me-1"></i>Done</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark"><i class="fa fa-clock me-1"></i>Pending</span>
                    }
                </p>

                @if (!string.IsNullOrEmpty(alert.AdminResponse))
                {
                    <div class="alert alert-info mt-3">
                        <strong>Admin Response:</strong><br />
                        @alert.AdminResponse
                    </div>
                }

                @if (User.IsInRole("StaffMember") && alert.StaffId == (int)ViewBag.CurrentStaffId)
                {
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this alert?');" style="display:inline-block; margin-top: 10px;">
                        <input type="hidden" name="id" value="@alert.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                }
            </div>
        </div>
    }
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
