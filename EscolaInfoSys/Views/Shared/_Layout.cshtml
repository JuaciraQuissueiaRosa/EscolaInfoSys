<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EscolaInfoSys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EscolaInfoSys.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul class="top-nav">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Students" asp-action="Index">Students</a></li>
                <li><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                <li><a asp-controller="Subjects" asp-action="Index">Subjects</a></li>
                <li><a asp-controller="FormGroups" asp-action="Index">Form Groups</a></li>
                <li><a asp-controller="Marks" asp-action="Index">Marks</a></li>
                <li><a asp-controller="Absences" asp-action="Index">Absences</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                            <button type="submit">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                }
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EscolaInfoSys - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
