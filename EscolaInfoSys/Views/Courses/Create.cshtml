@model EscolaInfoSys.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h2 class="page-title"><i class="fa fa-plus-circle"></i> Create Course</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FormGroups" class="form-label">Form Groups</label>
                <select asp-items="ViewBag.FormGroups" name="SelectedFormGroupIds" multiple class="form-select" size="5"></select>
            </div>



            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fa fa-arrow-left"></i> Back</a>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
