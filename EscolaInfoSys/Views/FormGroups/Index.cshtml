@model IEnumerable<EscolaInfoSys.Models.FormGroup>
@{
    ViewData["Title"] = "Form Groups";
}

<h2 class="page-title"><i class="fa fa-layer-group"></i> Form Groups</h2>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Create New</a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-vcenter card-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Number of Students</th>
                    <th>Subjects</th>
                    <th>Course</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Students?.Count() </td>
                        <td>
                            @if (item.Course != null && item.Course.Subjects != null && item.Course.Subjects.Any())
                            {
                                @string.Join(", ", item.Course.Subjects.Select(s => s.Name))
                            }
                            else
                            {
                                <span class="text-muted">No subjects</span>
                            }
                        </td>

                        <td>@item.Course?.Name <span class='text-muted'></span></td> 
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fa fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="fa fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
