@model IEnumerable<EscolaInfoSys.Models.Subject>
@{
    ViewData["Title"] = "Subjects";
}

<h2 class="page-title"><i class="fa fa-book"></i> Subjects</h2>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title"><i class="fa fa-list"></i> List of Subjects</h3>

        @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.IsInRole("StaffMember")))

        {
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> New Subject</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table card-table table-vcenter">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Course</th>
                    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.IsInRole("StaffMember")))

                    {
                        <th class="w-1">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Course?.Name</td>
                        @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Administrator") || User.IsInRole("StaffMember")))

                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fa fa-info-circle"></i> Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
