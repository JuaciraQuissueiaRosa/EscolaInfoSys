@model EscolaInfoSys.Models.Subject
@{
    ViewData["Title"] = "Details";
}

<h2 class="page-title"><i class="fa fa-info-circle"></i> Subject Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Course</dt>
            <dd class="col-sm-9">@Model.Course?.Name</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

