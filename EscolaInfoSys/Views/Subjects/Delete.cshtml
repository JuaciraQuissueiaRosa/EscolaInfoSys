@model EscolaInfoSys.Models.Subject
@{
    ViewData["Title"] = "Delete Subject";
}

<h2 class="page-title text-danger"><i class="fa fa-trash"></i> Confirm Deletion</h2>

<div class="card">
    <div class="card-body">
        <p>Are you sure you want to delete this subject?</p>

        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Course</dt>
            <dd class="col-sm-8">@Model.Course?.Name</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
