@model EscolaInfoSys.Models.Subject

@{
    ViewData["Title"] = "Edit Subject";
}

<h2 class="page-title"><i class="fa fa-edit me-2"></i> Edit Subject</h2>

<div class="card p-4">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CourseId" class="form-label">Course</label>
            <select asp-for="CourseId" class="form-select" asp-items="@(ViewData["CourseId"] as SelectList)">
                <option value="">-- Select a course --</option>
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TotalLessons" class="form-label"></label>
            <input asp-for="TotalLessons" class="form-control" type="number" min="1" />
            <span asp-validation-for="TotalLessons" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fa fa-save me-1"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa fa-arrow-left me-1"></i> Back
        </a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
