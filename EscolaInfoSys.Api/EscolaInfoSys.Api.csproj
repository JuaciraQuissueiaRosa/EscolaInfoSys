<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.18" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.18" />
		<PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\EscolaInfoSys\EscolaInfoSys.csproj" />
	</ItemGroup>

	<!-- ğŸš« Remover appsettings da publicaÃ§Ã£o para evitar conflito -->
	<ItemGroup>
		<Content Remove="appsettings.json" />
		<Content Remove="appsettings.Development.json" />
	</ItemGroup>

	<Target Name="RemoveAppSettingsFromPublish" AfterTargets="Publish">
		<ItemGroup>
			<FilesForPackagingFromProject Remove="appsettings.json" />
			<FilesForPackagingFromProject Remove="appsettings.Development.json" />
		</ItemGroup>
	</Target>

</Project>

